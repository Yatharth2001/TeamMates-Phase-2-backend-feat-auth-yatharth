# Database Configuration
DATABASE_URL=mysql://root:password@localhost:3306/teammates

# Server Configuration
PORT=3005

# Email Configuration (Gmail SMTP)
# IMPORTANT: Use Gmail App Password, not your regular Gmail password
# To generate an App Password:
# 1. Go to https://myaccount.google.com/security
# 2. Enable 2-Step Verification (if not already enabled)
# 3. Go to https://myaccount.google.com/apppasswords
# 4. Generate a new App Password for "Mail" and "Other (Custom name)"
# 5. Copy the 16-character password and paste it below

EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-16-character-app-password
EMAIL_FROM=your-email@gmail.com

# Better Auth Configuration
BETTER_AUTH_SECRET=your-secret-key-here
BETTER_AUTH_URL=http://localhost:3005
